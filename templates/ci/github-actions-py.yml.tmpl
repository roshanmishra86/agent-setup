name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  ci:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v4

      - name: Set up Python
        run: uv python install

      - name: Install dependencies
        run: uv sync

      - name: Lint
        run: {{PY_LINT_CMD}}

      - name: Format check
        run: {{PY_FORMAT_CMD}}

      - name: Type check
        run: {{PY_TYPE_CMD}}

      - name: Test
        run: uv run pytest -q
